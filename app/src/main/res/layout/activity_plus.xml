<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".PlusActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/obten_liason_plus"
        android:textColor="@color/celeste"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/iv_imagen_estrella" />

    <Button
        android:id="@+id/btnAceptarPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/redondear_ecoinca"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="@string/siguiente"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4" />

    <ImageView
        android:id="@+id/iv_imagen_estrella"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_plus"
        tools:background="@drawable/imagen_estrella_plus" />

    <include
        android:id="@+id/toolbar_activity_plus"
        layout="@layout/toolbar_principal"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="- Unlimited acces worlwide\n- Unlimited contacs\n- Be a Verified Member  "
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <include
        layout="@layout/layout_usuario_plus"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptarPlus"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.39" />

</android.support.constraint.ConstraintLayout>
