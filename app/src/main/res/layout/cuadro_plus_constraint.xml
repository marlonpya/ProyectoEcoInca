<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_contorno_check1"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/imagen_contorno_plus_final"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.58000004"
            app:srcCompat="@drawable/imagen_contorno_plus_final" />

        <ImageView
            android:id="@+id/iv_contorno_check2"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/imagen_contorno_plus_final"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.61"
            app:srcCompat="@drawable/imagen_contorno_plus_final" />

        <ImageView
            android:id="@+id/iv_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_contorno_check1"
            app:layout_constraintRight_toRightOf="@+id/iv_contorno_check1"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:srcCompat="@drawable/imagen_check" />

        <ImageView
            android:id="@+id/iv_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_contorno_check2"
            app:layout_constraintRight_toRightOf="@+id/iv_contorno_check2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:srcCompat="@drawable/imagen_check" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="$3.99"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_contorno_check1"
            app:layout_constraintLeft_toLeftOf="@+id/iv_contorno_check1"
            app:layout_constraintRight_toRightOf="@+id/iv_contorno_check1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="$12.45"
            app:layout_constraintBottom_toBottomOf="@+id/iv_contorno_check2"
            app:layout_constraintLeft_toLeftOf="@+id/iv_contorno_check2"
            app:layout_constraintRight_toRightOf="@+id/iv_contorno_check2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Months"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="@+id/iv_check1"
            app:layout_constraintRight_toRightOf="@+id/iv_check1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Year"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintLeft_toLeftOf="@+id/iv_check2"
            app:layout_constraintRight_toRightOf="@+id/iv_check2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintLeft_toLeftOf="@+id/iv_check1"
            app:layout_constraintRight_toRightOf="@+id/iv_check1" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintLeft_toLeftOf="@+id/iv_check2"
            app:layout_constraintRight_toRightOf="@+id/iv_check2" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>