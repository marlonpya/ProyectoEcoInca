<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cc_row_lista_buscar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efecto_row_transparente"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/imagen_contorno_rows" />

        <ImageView
            android:id="@+id/row_iv_imagen_lista_buscar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="16dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/imageView2"
            card_view:layout_constraintRight_toRightOf="@+id/imageView2"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/icono_usuario" />

        <TextView
            android:id="@+id/row_tv_titulo_lista_buscar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="@color/c_accent"
            card_view:layout_constraintLeft_toRightOf="@+id/row_iv_imagen_lista_buscar"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Empresa Eco Inca" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="286dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, consectetuera dipiscing elit. Aenean commodo ligula eget do."
            card_view:layout_constraintLeft_toLeftOf="@+id/row_tv_titulo_lista_buscar"
            card_view:layout_constraintTop_toBottomOf="@+id/row_tv_titulo_lista_buscar" />

        <ImageView
            android:id="@+id/row_iv_identificador_tipo_empresa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/triangulo_row_empresa" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>