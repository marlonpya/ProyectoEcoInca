<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum=".9">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_comprador_registro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/icono_comprador_registro_opaco" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/comprador" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_vendedor_registro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icono_vendedor_registro_opaco" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/vendedor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ambos_registro"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icono_ambos_registro_opaco"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@string/ambos" />
    </LinearLayout>

</LinearLayout>