<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/c_accent</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/letra_s2</item>
        <item name="android:background">@drawable/redondear_fb</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableLeft">@drawable/icono_fb</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

</resources>
